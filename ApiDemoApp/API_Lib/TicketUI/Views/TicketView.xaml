<UserControl x:Class="TicketUI.Views.TicketView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicketUI.Views"


             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800"
             Background="#2E2E2E"
             Foreground="AliceBlue"
             FontSize="15">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            Margin="10">
            <TextBlock
                FontSize="18"
                Text="Ticket Properties"
                FontWeight="Bold"/>
            <Button
                x:Name="LoadTicketAndPrint"
                Margin="30">Load Ticket</Button>
            <TextBlock
                Margin="10"
                FontSize="13"
                Text="Ticket ID:"/>
            <TextBox
                x:Name="TicketId"
                Width="33"
                Height="23"
                Background="#3D3D3D"
                Foreground="WhiteSmoke"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="1"
            Margin="10">
            <TextBlock Text="ID:"/>
            <TextBox x:Name="Id"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="2"
            Margin="10">
            <TextBlock Text="Number:"/>
            <TextBox x:Name="Number"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="3" 
            Margin="10">
            <TextBlock Text="Title:"/>
            <TextBox x:Name="Title"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="4" 
            Margin="10">
            <TextBlock Text="Group:"/>
            <TextBox x:Name="Group"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="5" 
            Margin="10">
            <TextBlock Text="State:"/>
            <TextBox x:Name="State"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="6" 
            Margin="10">
            <TextBlock Text="Priority:"/>
            <TextBox x:Name="Priority"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel 
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="7" 
            Margin="10"
            >
            <TextBlock Text="Created_at:"/>
            <TextBox x:Name="Created_at" Text="{Binding Created_at}"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            Grid.Row="8" 
            Margin="10">
            <TextBlock Text="Article_ids:"/>
            <TextBox x:Name="ArticleIdsString" Text="{Binding ArticleIdsString}"
                     Background="#3D3D3D"
                     Foreground="WhiteSmoke"
                     Width="250"/>
        </StackPanel>
    </Grid>
</UserControl>
